  align-items: center;
  justify-content: center;
  font-size: 28px;
  font-weight: 700;
  color: white;
}

.service-logo.cashapp {
  background: linear-gradient(135deg, #00D64F 0%, #00C853 100%);
}

.service-logo.zelle {
  background: linear-gradient(135deg, #6D1ED4 0%, #5A1AB0 100%);
}

.service-info {
