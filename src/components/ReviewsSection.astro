<script define:vars={{ API_BASE }}>
  // ‚úÖ Astro inyecta API_BASE directamente en el script compilado
  const API_URL = `${API_BASE}/api`;
  
  console.log('üîó API_BASE inyectado:', API_BASE);
  console.log('üîó API_URL final:', API_URL);

  let allReviews = [];
  let currentSlide = 0;
  let autoplayInterval;

  // Cargar estad√≠sticas
  async function loadStats() {
    try {
      console.log('üìä Fetching stats from:', `${API_URL}/reviews/stats`);
      const response = await fetch(`${API_URL}/reviews/stats`);
      
      if (!response.ok) {
        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
      }
      
      const data = await response.json();
      
      const totalEl = document.getElementById('totalReviews');
      const avgEl = document.getElementById('avgRating');
      
      if (totalEl) totalEl.textContent = data.totalReviews;
      if (avgEl) avgEl.textContent = data.averageRating;
      
      console.log('‚úÖ Stats loaded successfully');
    } catch (error) {
      console.error('‚ùå Error loading stats:', error);
      console.error('URL intentada:', `${API_URL}/reviews/stats`);
    }
  }

  // Cargar todas las rese√±as
  async function loadAllReviews() {
    try {
      const wrapper = document.getElementById('testimonialWrapper');
      if (!wrapper) return;
      
      wrapper.innerHTML = '<div class="loading">Loading reviews...</div>';
      
      console.log('üìù Fetching reviews from:', `${API_URL}/reviews?page=1&limit=100`);
      const response = await fetch(`${API_URL}/reviews?page=1&limit=100`);
      
      if (!response.ok) {
        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
      }
      
      const data = await response.json();
      console.log('‚úÖ Reviews loaded:', data.reviews.length);
      
      if (data.reviews.length === 0) {
        wrapper.innerHTML = '<div class="loading">No reviews yet. Be the first to share your experience!</div>';
        return;
      }
      
      allReviews = data.reviews;
      renderTestimonials();
      startAutoplay();
    } catch (error) {
      console.error('‚ùå Error loading reviews:', error);
      console.error('URL intentada:', `${API_URL}/reviews?page=1&limit=100`);
      const wrapper = document.getElementById('testimonialWrapper');
      if (wrapper) {
        wrapper.innerHTML = '<div class="loading">Error loading reviews. Please check console.</div>';
      }
    }
  }

  // Funci√≥n para obtener iniciales
  function getInitials(name) {
    return name
      .split(' ')
